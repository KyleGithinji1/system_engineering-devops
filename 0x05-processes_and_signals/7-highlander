#!/usr/bin/env bash
# Kills the 7-highlander process using the SIGKILL signal.

# Find the Process ID (PID) of the 7-highlander process.
# The -f flag matches against the full command line, not just the process name.
PID=$(pgrep -f "7-highlander")

# Check if a PID was found before attempting to kill.
if]; then
    # Send SIGKILL (signal 9) to the process.
    kill -9 "$PID"
else
    # Exit gracefully if no process is found.
    echo "Error: No process with the name '7-highlander' was found." >&2
    exit 1
fi
